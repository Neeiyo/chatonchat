<%= render 'layouts/slider'  %>
	<div class="container">
		<div class="row">
	
			<div class="title text-center">
				<h2>Nos photos de chats</h2>
			</div>
	</div>
		
		<div class="row">
		<% @items.each do |item| %>
		<div class="col-md-3">
		<div class="product-item">
	
		
			<div class="product-thumb">
			
				<img class="img-responsive" src="<%= item.image_url %>" alt="product-img">
				
				<div class="preview-meta">
				<%if current_user%>
            <%= link_to "Ajouter au panier", cart_path(item.id), method: :put, class: "btn btn-main mt-20", style: "margin-bottom: 5%;"%>
            <%else%>
            <%= link_to "Connectez-vous", user_session_path, class: "btn btn-main mt-20", style: "margin-bottom: 5%;"%>
	      <%end%>
					
			</div>
		</div>
			<div class="product-content">
				<h4><%= link_to item.title, item_path(item.id)%></h4>
				<p class="price"><%= item.price%>â‚¬</p>
				
			</div>
		
	
	
	
	</div>

	</div>
	<% end %>
	</div>
	</div>
	</div>
			




			
